<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">

    <VBox class="sapUiSmallMargin">

        <l:Grid
            defaultSpan="L4 M4 S12"
            vSpacing="1"
            hSpacing="2">

            <HBox width="100%" alignItems="Center">
                <Label text="Loan Number:" design="Bold"/>
                <Text text="{loanNumber}" class="sapUiTinyMarginBegin"/>
            </HBox>

            <HBox width="100%" alignItems="Center">
                <Label text="Product Type:" design="Bold"/>
                <Text text="{productType}" class="sapUiTinyMarginBegin"/>
            </HBox>

            <HBox width="100%" alignItems="Center">
                <Label text="Loan Partner:" design="Bold"/>
                <Text text="{loanPartner}" class="sapUiTinyMarginBegin"/>
            </HBox>

            <HBox width="100%" alignItems="Center">
                <Label text="Loan Type:" design="Bold"/>
                <Text text="{loanType}" class="sapUiTinyMarginBegin"/>
            </HBox>

            <HBox width="100%" alignItems="Center">
                <Label text="Status:" design="Bold"/>
                <Text text="{status}" class="sapUiTinyMarginBegin"/>
            </HBox>

            <HBox width="100%" alignItems="Center">
                <Label text="Disb. Status:" design="Bold"/>
                <Text text="{disbursementStatus}" class="sapUiTinyMarginBegin"/>
            </HBox>

        </l:Grid>
    </VBox>

</core:FragmentDefinition>
